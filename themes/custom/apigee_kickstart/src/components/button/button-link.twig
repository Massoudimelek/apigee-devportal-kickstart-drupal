{#
/**
 * @file
 * Template for a button link component.
 *
 * Available config:
 * - type: primary | secondary | success | danger | warning | info | light | dark
 * - outline: true | false
 * - size: xs | md | sm | lg
 * - text: string
 * - attributes: Attributes array.
 */
#}
{% if not attributes %}
  {% set attributes = create_attribute() %}
{% endif %}

{% set classes = [
  'btn',
  type ? (outline ? 'btn-outline-' : 'btn-') ~ type,
  size ? 'btn-' ~ size,
]|merge(classes|default([])) %}

<a{{ attributes.addClass(classes) }} href="{{ url }}">
  {{- text -}}
</a>
