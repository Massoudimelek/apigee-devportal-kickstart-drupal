{#
/**
 * @file
 * Template for a Blockquote Paragraph.
 */
#}
{% embed 'paragraph.html.twig' with { classes: ['py-4'] } %}
  {% block content %}
    <div class="container">
      <blockquote class="bg-light text-center px-9 py-7">
        {{ content|without('field_blockquote_source') }}
        {% if content.field_blockquote_source|render %}
          <footer class="blockquote-footer">
            {{ content.field_blockquote_source }}
          </footer>
        {% endif %}
      </blockquote>
    </div>
  {% endblock %}
{% endembed %}
