{#
/**
 * @file
 * Template for a Hero Paragraph.
 */
#}
{% extends 'paragraph.html.twig' %}
{% block content %}
  <div class="container-fluid">
    <div class="border-bottom row text-center text-md-left align-items-center">
      <div class="col-md-5 py-9 py-md-0 px-4 px-md-5 px-xl-9">
        {{ content.field_title }}
        {{ content.field_text }}
        {{ content.field_buttons }}
        {{ content|without('field_buttons', 'field_media', 'field_text', 'field_title') }}
      </div>
      <div class="col-md-7 pr-0 d-none d-md-block">
        {{- content.field_media -}}
      </div>
    </div>
  </div>
{% endblock %}
