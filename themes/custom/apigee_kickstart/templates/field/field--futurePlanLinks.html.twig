{#
/**
 * @file
 * Template for future plan link field.
 */
#}
<nav class="is-horizontal is-collapsible mb-3 position-container is-horizontal-enabled">
  <ul class="tabs nav-tabs nav-tabs--primary clearfix">
    {% for item in items %}
      {% set linkClasses = item.content['#url'].options.attributes.class %}
      <li{{ item.attributes.addClass('nav-item') }}>
        {% set activeClass = '' %}
        {% if 'is-active' in linkClasses %}
          {% set activeClass = 'active' %}
        {% endif %}

        {{ link(item.content['#title'], item.content['#url'], { 'class':['nav-link', activeClass]}) }}
      </li>
    {% endfor %}
  </ul>
</nav>
