{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
  {% embed '@radix/navbar/navbar.twig' with {
    placement: 'sticky-top',
    container: 'fixed',
    color: 'dark',
    utility_classes: ['bg-dark'],
  } %}

    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}

    {% block left %}
      {% if page.navbar_left %}
        <div class="mr-auto">
          {{ page.navbar_left }}
        </div>
      {% endif %}
    {% endblock %}

    {% block right %}
      {% if page.navbar_right %}
        {{ page.navbar_right }}
      {% endif %}
    {% endblock %}
  {% endembed %}

  {% if page.breadcrumbs %}
    <div class="page__breadcrumbs">
      <div class="container">
        {{ page.breadcrumbs }}
      </div>
    </div>
  {% endif %}

  {% if page.header|render %}
    <header class="page__header">
      <div class="container-fluid">
        {# If field_header has a value, it should replace the title block.#}
        {% if node.field_header.value %}
          {{ page.header|without('apigee_kickstart_title') }}
        {% else %}
          {{ page.header }}
        {% endif %}
      </div>
    </header>
  {% endif %}

    {% if page.tasks %}
  <main class="pb-5">
      <div class="page__tasks">
        <div class="container">
          {{ page.tasks }}
        </div>
      </div>
    {% endif %}

    {% if page.content_above %}
      <div class="page__content_above">
        <div class="container-fluid">
          {{ page.content_above }}
        </div>
      </div>
    {% endif %}

    {% if page.content %}
      <div class="page__content">
        {{ page.content }}
      </div>
    {% endif %}
  </main>

  {% if page.content_below %}
    <div class="page__content_below">
      <div class="container-fluid">
        {{ page.content_below }}
      </div>
    </div>
  {% endif %}

  {% if page.footer or page.copyright %}
    <footer class="page__footer">
      {% if page.footer %}
        <div class="footer bg-dark text-light pt-5 pb-4 pb-md-8">
          <div class="container">
            <div class="d-md-flex justify-content-md-between">
              {{ page.footer }}
            </div>
          </div>
        </div>
      {% endif %}

      {% if page.copyright %}
        <div class="copyright text-light py-1">
          <div class="container">
            <div class="d-md-flex justify-content-md-end">
              {{ page.copyright }}
            </div>
          </div>
        </div>
      {% endif %}
    </footer>
  {% endif %}
</div>
