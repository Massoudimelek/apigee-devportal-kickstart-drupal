{#
/**
 * @file
 * Default theme implementation to display an Apigee Edge App.
 *
 * Available variables:
 * - entity: The Apigee Edge App entity.
 * - content: All app items. Use {{ content }} to print them all,
 * - attributes: HTML attributes for the containing element.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
  'app',
  'app--type-' ~ entity.getEntityTypeId|clean_class,
  view_mode ? 'app--view-mode-' ~ view_mode|clean_class,
]
%}

{% embed '@apigee-kickstart/card/collapsible-card.twig' with {
  utility_classes: classes,
  title: entity.label
} %}

  {% block header %}
    {{ content.status }}
  {% endblock %}

  {% block content %}
    {{ content|without('status') }}
  {% endblock %}
{% endembed %}

